@model CRUD_standby.Models.Cliente

@{
    ViewData["Title"] = "Delete";
}

<h3>Tem certeza que deseja apagar o cadastro de @Html.DisplayFor(model => model.Razao_social)?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Razão Social:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Razao_social)
        </dd>
        <dt class = "col-sm-2">
            CNPJ:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cnpj)
        </dd>
        <dt class = "col-sm-2">
            Data de Fundação:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Data_fundacao)
        </dd>
        <dt class = "col-sm-2">
            Capital:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Capital)
        </dd>
        <dt class="col-sm-2">
            Quarentena:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Quarentena)
        </dd>
        <dt class = "col-sm-2">
            Status:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Status_cliente)
        </dd>
        <dt class = "col-sm-2">
            Classificação:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Classificacao)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Apagar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Voltar</a>
    </form>
</div>
