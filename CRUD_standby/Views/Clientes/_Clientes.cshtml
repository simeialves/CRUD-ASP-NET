@model IEnumerable<CRUD_standby.Models.Cliente>

<div id="divListaClientes">
    <table class="table">
        <thead>
            <tr>
                <th>
                    Razão Social
                </th>
                <th>
                    CNPJ
                </th>
                <th>
                    Data de Fundação
                </th>
                <th>
                    Capital
                </th>
                <th>
                    Status
                </th>
                <th>
                    Ação
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Razao_social)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Cnpj)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Data_fundacao)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Capital)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status_cliente)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class=" btn btn-danger btn-sm">Apagar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>